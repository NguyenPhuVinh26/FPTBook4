@using PagedList.Mvc;
@using PagedList;

@model PagedList.PagedList<WebSiteBanSach4.Models.ChuDe>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Layout/AdminLayout.cshtml";
}

<h1>Manager Category</h1>

<p>
    @Html.ActionLink("Add", "Add")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.First().MaChuDe)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().TenChuDe)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.MaChuDe)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TenChuDe)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { @MaChuDe = item.MaChuDe }) |
            @Html.ActionLink("Details", "Details", new { @MaChuDe = item.MaChuDe }) |
            @Html.ActionLink("Delete", "Delete", new { @MaChuDe = item.MaChuDe })
        </td>
    </tr>
}

</table>

Page@(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber)/@Model.PageCount
<div class="MenuPage">
    @Html.PagedListPager(Model, page => Url.Action("Index", new { page = page }))
</div>
<style>
    .MenuPage li {
        display: inline;
    }
</style>
