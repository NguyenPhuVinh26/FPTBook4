<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/Content/NguoiDungCssLayout/fonts.css" rel="stylesheet" />
    <link href="~/Content/NguoiDungCssLayout/screen.css" rel="stylesheet" />
    
    <link href="~/Content/NguoiDungCssLayout/NguoiDungCssLayout.css" rel="stylesheet" />
    
    <link href="~/Content/font-awesome-4.7.0/css/font-awesome.min.css" rel="stylesheet" />

    
    <link href="~/NivoSlider/nivo-slider.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/NivoSlider/jquery.nivo.slider.js"></script>
    <script src="~/NivoSlider/jquery.nivo.slider.pack.js"></script>
   
</head>
<body>
  <div id="ToanTrang">
        <section class="blank">
            <div class="flash">
                <div calss="icDienThoai">
                    <i class="fa fa-phone"></i>
                    (+84) 1900-1500
                </div>
                <div class="DangKyDangNhap">
                    @Html.Action("GioHangPartial","GioHang")
                    <i class="fa fa-sign-in" aria-hidden="true"></i>
                    @Html.ActionLink("Register", "DangKy", null, htmlAttributes: new { @class = "DangKy" })
                    <i class="fa fa-lock" aria-hidden="true"></i>
                    @Html.ActionLink("Login", "DangNhap", null, htmlAttributes: new { @class = "DangNhap" })
                </div>
            </div>


            <div class="flash success" id="divDanhMuc">
                <div id="txtTimKiem">
                    @using (Html.BeginForm("KetQuaTimKiem","TimKiem",FormMethod.Post))
                    { 
                        @Html.TextBox("txtTimKiem", "", htmlAttributes: new { @class = "TexBoxTimKiem", @placeholder = "Enter search term..." })
                        <div id="divHinhAnhTimKiem">
                            <button type="submit"><img src="~/HinhAnh/iconsearch.png" /></button>
                        </div>
                    }
                </div>
                <ul class="navMenu">
                    <li>
                        <a href="#">Home</a>
                    </li>
                    <li>
                        <a href="#">Introduct</a>
                    </li>
                    <li>
                        <a href="#">Contact</a>
                    </li>
                    <li>
                        <a href="#">Tutorial</a>
                    </li>
                    <li>
                        <a href="#">Books</a>
                    </li>
                </ul>
            </div>
        </section>

        <section>
            <div id="divMenuLeft">
                <div class="activity">

                    @Html.Action("SachMoiPartial","Sach")
                </div>
            </div>
            <div id="slider" calss="nivoSlider">
                <img src="~/HinhAnh/001.jpg" />
                <img src="~/HinhAnh/002.jpg" />
                <img src="~/HinhAnh/003.jpg" />
            </div>
            <div style="clear:both"></div>
        </section>
        <div id="NoiDung">
            @RenderBody()
        </div>
        <section>
            <div>
                @Html.Action("ChuDePartial","ChuDe")
            </div>

            <hr>
        </section>

        <section class="blank items">
            <div id="divLeft">
                <div class="item">
                    <div class="item-info">
                        @Html.Action("NhaXuatBanPartial","NhaXuatBan")
                       
                    </div>
                    
                </div>
            </div>
                <div id="divRight">
                    @RenderSection("NoiDungBenPhai", false)
                </div>
                <div style="clear:both"></div>
                <div>
                    <a href="#" class="button button-buy">Welcome to FPTBook</a>     
            </div>
        </section>
  </div>
<script type="text/javascript">
    $(window).load(function () {
        $('#slider').nivoSlider({
            controlNav:false,
            nexText: '',
            prevText:''
        });
    });
    </script>

    <style>
        #slider {
    float:right;
    width:900px;
    height:360px;
    }
    #slider img {
    width:900px;
    height:300px;
    }
    </style>
</body>
</html>
