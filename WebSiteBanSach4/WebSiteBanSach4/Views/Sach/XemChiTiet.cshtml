@using WebSiteBanSach4.Models;
@model Sach
@{
    ViewBag.Title = "XemChiTiet";
    Layout = "~/Views/Layout/NguoiDungLayout.cshtml";
}
<style>
    #divNoiDungBenPhai {
    display:none;
    }
    #divMenuSlider {
        display:none;
    }
</style>
@section NoiDungBenPhai{
    <div>
     <img src="@Url.Content("~/HinhAnhSP/"+Model.AnhBia)" />
    </div>

    <div id="ThongTin">
        <div id="TenSach">@Model.TenSach</div>
        <div id="ChuDe">Category: @ViewBag.TenChuDe</div>
        <div id="NhaXuatBan">Publisher: @ViewBag.NhaXuatBan</div>
        <div id="MoTa">Description:<br /> @Model.MoTa<br /></div>
        <div id="Gia"><span style="color: green;font-weight:normal;">Price:</span><br /><span id="Gia"> @string.Format("{0:0,0}",@Model.GiaBan)$ </span></div>
        <br />
        @using (Html.BeginForm("ThemGioHang", "GioHang", new { @iMaSach = Model.MaSach, @strURL = Request.Url.ToString() }))
        { 
        <input type="submit" style ="cursor:pointer"value="Buy &#xd07a;" id="btnGioHang" class="btn btn-primary">
        }
    </div>
    <div style="clear:both"></div>
    }
    <style>
        #HinhAnh {
            float:left;
           
        }
        #ThongTin {
            float:left;
            width:600px;
        }
        #TenSach {
            font-weight:normal;
            font-size:20pt;
            height:auto;
            word-wrap:break-word;
            color:red;
        }
        #ChuDe, #NhaXuatBan {
            font-size:15pt;
            font-weight:normal;
            color:black;
            height:auto;
        }
        #MoTa {
            font-weight:normal;
            color:black;
            word-wrap:break-word;
            height:auto;
        }
        #Gia span#Gia {
            font-weight:normal;
            color:orange;
            font-size:25pt;
            height:auto;
        }
        #btnGioHang {
            font-family: 'FontAwesome','Segoe UI';
            background-color:red;
        }
            #btnGioHang:hover {
            background-color: #a30a11;
            }
    </style>
    
